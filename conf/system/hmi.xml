<launch>

    <arg name="map_file" default="$(find conf)/launch/hmi/maps/factory_map.yaml"/>
    <arg name="rviz_config" default="$(find conf)/launch/hmi/fdpo_simulation.rviz"/>
    <arg name="use_rviz" default="false"/>
    <arg name="use_rqt" default="false"/>

    <include file="$(find conf)/launch/hmi/fdpo_map_server.launch">
        <arg name="map_file" value="$(arg map_file)"/>
    </include>

    <include file="$(find conf)/launch/hmi/fdpo_path_viewer.launch"/>

    <include if="$(arg use_rqt)" file="$(find conf)/launch/hmi/fdpo_reconfigure_rqt.launch"/>

    <include if="$(arg use_rviz)" file="$(find conf)/launch/hmi/fdpo_rviz.launch">
        <arg name="rviz_config" value="$(arg rviz_config)"/>
    </include>

    <include file="$(find conf)/launch/hmi/fdpo_beacons_viz.launch"/>

</launch>
