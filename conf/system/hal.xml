<launch>

  <!-- Argumento para escolher o driver de LiDAR: "hlds" ou "ydlidar" -->
  <arg name="lidar_driver" default="ydlidar"/>

  <!-- Driver do LiDAR (seleção automática HLS-LFCD2 ou YDLidar X4) -->
  <include file="$(find conf)/launch/hardware/lidar_selector.launch">
    <arg name="lidar_driver" value="$(arg lidar_driver)"/>
  </include>

  <!-- Driver do Pi Pico (Odometria e Controle de Motores) -->
  <include file="$(find conf)/launch/hardware/pi_pico_driver.launch"/>
  
</launch>