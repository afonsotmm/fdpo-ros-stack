<launch>
  <!-- Teleop RQT Robot Steering (Interface Gráfica) -->
  <!-- Controla o robô com sliders numa interface gráfica -->
  <!-- 
    Nota: Este launch file abre o RQT com o plugin de steering.
    Podes também abrir manualmente: rqt -> Plugins -> Robot Tools -> Robot Steering
  -->
  
  <node pkg="rqt" type="rqt" name="rqt_robot_steering" args="--standalone rqt_robot_steering">
    <remap from="/cmd_vel" to="/cmd_vel"/>
  </node>
  
</launch>

