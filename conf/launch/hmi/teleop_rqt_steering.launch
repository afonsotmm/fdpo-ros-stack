<launch>
  <!-- Teleop RQT Robot Steering (Interface Gráfica) -->
  <!-- Controla o robô com sliders numa interface gráfica -->
  <!-- 
    NOTA: Este launch file executa o rqt_robot_steering via rosrun.
    Alternativa: Abrir manualmente: rqt -> Plugins -> Robot Tools -> Robot Steering
  -->
  
  <node pkg="rqt_robot_steering" type="rqt_robot_steering" name="rqt_robot_steering" output="screen"/>
  
</launch>

